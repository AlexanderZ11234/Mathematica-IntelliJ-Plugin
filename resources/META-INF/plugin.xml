<idea-plugin url="https://github.com/halirutan/Mathematica-IntelliJ-Plugin/wiki" version="2">
    <id>de.halirutan.mathematica</id>
    <name>Mathematica Support</name>
    <category>Custom Language</category>
    <version>0.1.8</version>
    <idea-version since-build="123.94"/>
    <vendor email="pscheibe@trm.uni-leipzig.de" url="http://www.halirutan.de">Patrick Scheibe</vendor>

    <description><![CDATA[
        Mathematica support for IntelliJIDEA. Includes syntax highlighting, function completion, documentation
        lookup and more. This plugin is currently under heavy development. Therefore, the most recent version can
        be found in the <a href="https://github.com/halirutan/Mathematica-IntelliJ-Plugin">GitHub repository</a>.
        Here is a direct link to the plugin: <a href="https://github.com/halirutan/Mathematica-IntelliJ-Plugin/raw/master/Mathematica-IntelliJ-Plugin.jar">
        Mathematica-IntelliJ-Plugin.jar</a>.
      ]]></description>

    <change-notes>
        <![CDATA[
            <p>0.1.8</p>
            <ul>
                <li >Improved highlighting of patterns</li>
                <li >Smart completion inside Message[]</li>
                <li >Local variable highlighting</li>
            </ul>
            <p>0.1.5</p>
            <ul>
                <li >Local variable completion</li>
                <li >Smart completion of Options to functions</li>
                <li>Basic reference resolving of local variables</li>
                <li>Renaming of variables with partial reference resolving</li>
            </ul>
            <p>0.1.4</p>
            <ul>
                <li>Anonymous functions are made italic </li>
            </ul>
            <p>0.1.4</p>
            <ul>
              <li >Smart completion of built-in options to functions</li>
              <li>Completion of localized variables (Block/Module and patterns in function definitions)</li>
              <li>Bugfixes</li>
            </ul>
            <p>0.1.3</p>
            <ul >
                <li >Creation of Mathematica SDK types</li>
                <li>Consistent colors for Default and Darcula scheme</li>
                <li >Bugfixes</li>
            </ul>
            <p >0.1.2</p>
            <ul >
                <li >Commenter</li>
                <li >Create Mathematica files</li>
                <li >Color setting page</li>
            </ul>
            <p >0.1:</p>
            <ul >
                <li >Syntax highlighting</li>
                <li >Autocompletion for built-in functions</li>
                <li >Paired brace matching and smart quote inserting</li>
                <li >Documentation lookup of built-in functions</li>
            </ul>
        ]]>
    </change-notes>


    <extensions defaultExtensionNs="com.intellij">

        <internalFileTemplate name="Package"/>

        <fileTypeFactory implementation="de.halirutan.mathematica.MathematicaFileTypeFactory"/>
        <lang.parserDefinition language="Mathematica" implementationClass="de.halirutan.mathematica.parsing.prattParser.MathematicaParserDefinition"/>
        <annotator language="Mathematica" implementationClass="de.halirutan.mathematica.codeInsight.editor.MathematicaHighlightingAnnotator"/>
        <lang.commenter language="Mathematica" implementationClass="de.halirutan.mathematica.codeInsight.MathematicaCommenter"/>
        <lang.braceMatcher language="Mathematica" implementationClass="de.halirutan.mathematica.codeInsight.MathematicaBraceMatcher"/>
        <quoteHandler fileType="Mathematica" className="de.halirutan.mathematica.codeInsight.MathematicaQuoteHandler"/>
        <completion.contributor language="Mathematica" implementationClass="de.halirutan.mathematica.codeInsight.completion.MathematicaCompletionContributor"/>
        <completion.confidence language="Mathematica" implementationClass="de.halirutan.mathematica.codeInsight.completion.MathematicaCompletionConfidence"/>

        <typedHandler implementation="de.halirutan.mathematica.codeInsight.editor.MathematicaBinaryTypedHandler" id="MathematicaBinary"/>
        <lang.syntaxHighlighterFactory key="Mathematica" implementationClass="de.halirutan.mathematica.codeInsight.editor.MathematicaSyntaxHighlighterFactory"/>
        <lang.documentationProvider language="Mathematica" implementationClass="de.halirutan.mathematica.documentation.MathematicaDocumentationProvider"/>
        <colorSettingsPage implementation="de.halirutan.mathematica.codeInsight.editor.MathematicaColorSettingsPage"/>

        <sdkType id="Mathematica Sdk" implementation="de.halirutan.mathematica.sdk.MathematicaSdkType"/>

        <moduleType id="MATHEMATICA_MODULE" implementationClass="de.halirutan.mathematica.module.MathematicaModuleType"/>
        <fileTemplateGroup implementation="de.halirutan.mathematica.MathematicaFileTemplateProvider"/>
        <projectTemplatesFactory implementation="de.halirutan.mathematica.module.MathematicaProjectTemplatesFactory"/>

        <additionalTextAttributes scheme="Darcula" file="colors/MathematicaDarcula.xml"/>
        <additionalTextAttributes scheme="Default" file="colors/MathematicaDefault.xml"/>
        <lang.refactoringSupport language="Mathematica" implementationClass="de.halirutan.mathematica.refactoring.MathematicaRefactoringSupport"/>
    </extensions>


    <actions>
        <action id="Mathematica.NewMathematicaFile"
                class="de.halirutan.mathematica.actions.CreateMathematicaFile" text="Mathematica File"
                description="Create New Mathematica File">
            <add-to-group group-id="NewGroup" anchor="before" relative-to-action="NewFromTemplate"/>

        </action>
    </actions>
</idea-plugin>